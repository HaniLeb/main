{% extends 'base.html.twig' %} 

{% block title %}Nos actualités{% endblock %} 

{% block extra_stylesheets %}
<link rel="stylesheet" href="styles/actualite.css" />
{% endblock %} 

{% block body %}

<main>
  <div class="actualite-hero-section">
    <h1 class="h1-hero-section">Découvrez nos actualitées</h1>
    <button class="actualite-btn">VOIR LA CARTE</button>
    <button class="actualite-btn btn-reserver">RESERVER</button>
  </div>
  <div class="actualite-container">
    {% for actualite in actualites %}
    <div class="actualite">
      <img src="img/{{ actualite.nomImage }}" alt="" />
      <h2>{{ actualite.titre }}</h2>
      <p>{{ actualite.description|u.truncate(150) }}...</p>
      <a href="{{ path('app_actualite_view', {"id": actualite.id}) }}">Voir</a>
    </div>
    {% endfor %}
  </div>
</main>

{% endblock %}
